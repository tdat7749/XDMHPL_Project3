@using BanHangMVC.Request
@model LoginRequest

@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng Nhập</h3></div>
                                <div class="card-body">
                                    <form id="loginForm" asp-action="Index" asp-controller="Login" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating mb-3">
                                            <label asp-for=UserName>Tài Khoản</label>
                                            <input asp-for=UserName class="form-control" id="inputUserName" type="text" />

                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <label asp-for=Password>Mật Khẩu</label>
                                            <input asp-for=Password class="form-control" id="inputPassword" type="password" />

                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>